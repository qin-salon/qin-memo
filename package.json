    "identity-obj-proxy": "3.0.0",
    "jest": "27.4.7",
    "jest-watch-typeahead": "1.0.0",
    "lint-staged": "12.2.0",
    "msw": "0.36.5",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.5",
    "prettier": "2.5.1",
    "tailwindcss": "3.0.15",
    "typescript": "4.5.4"
